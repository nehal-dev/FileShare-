{
  "name": "varmax-file-share-pro",
  "version": "2.0.0",
  "description": "High-performance file sharing system with instant upload/download capabilities",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "lint": "eslint .",
    "build": "webpack --mode production",
    "clean": "rimraf dist",
    "security-check": "snyk test",
    "monitor": "nodemon --exec 'node -r dotenv/config' index.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "file-sharing",
    "upload",
    "download",
    "streaming",
    "real-time",
    "high-performance"
  ],
  "author": "NZ R",
  "license": "MIT",
  "dependencies": {
    "archiver": "^5.3.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.6.1",
    "stream": "^0.0.2",
    "zlib": "^1.0.5",
    "cluster": "^0.7.7",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "babel-loader": "^9.1.2",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "snyk": "^1.1130.0",
    "supertest": "^6.3.3",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^6.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverage": true
  },
  "nodemonConfig": {
    "ignore": [
      "uploads/*",
      "temp/*",
      "coverage/*",
      "dist/*"
    ],
    "delay": "2500"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "no-console": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 100
  }
}
